<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import java.net.URL?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="yugioh.view.DuelView"
          prefHeight="763" prefWidth="1246" alignment="CENTER" hgap="10" vgap="10" styleClass="root">

    <VBox GridPane.rowIndex="1" GridPane.columnIndex="3" spacing="10" alignment="CENTER" styleClass="box">
        <Label fx:id="congrats" styleClass="congrats" alignment="CENTER"/>
        <Label text="Above us, you see, there’s only the sky, the infinite,&#10;a void of space and emptiness so incredible that to think of it in detail is to overwhelm the mind.&#10;But down, down into the earth. Through the many layers of this globe, this sphere built and crusted upon a single, beating point.&#10;The centre of the universe for each and every one of us, that glorious convergence from which everything, everywhere, is ‘up’.&#10;To reach it, to approach that source, that rolling, molten centre of it all, the only thing you have to do is dig." styleClass="text" alignment="CENTER"/>
    </VBox>

    <Button GridPane.rowIndex="4" GridPane.columnIndex="0" text="Back" fx:id="Back"  onMouseClicked="#backToMainPage" styleClass="Back"/>

    <stylesheets>
        <URL value="@stylesheets/FinishGame.css"/>
    </stylesheets>
</GridPane>