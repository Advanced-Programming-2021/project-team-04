<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import java.net.URL?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="yugioh.view.ImportAndExportView"
          prefHeight="763" prefWidth="1246" alignment="CENTER" hgap="10" vgap="10" styleClass="root">

    <Button text="Main Menu" fx:id="mainMenu" GridPane.columnIndex="1" GridPane.rowIndex="0" onMouseClicked="#mainMenu"/>

    <Button text="&#60;" styleClass="navi" GridPane.rowIndex="1" GridPane.columnIndex="0" fx:id="back"/>

    <VBox GridPane.rowIndex="1" GridPane.columnIndex="2" spacing="10" alignment="CENTER">
        <ImageView fx:id="first" fitHeight="400" fitWidth="300"/>
        <Button text="Select" styleClass="select"/>
    </VBox>

    <VBox GridPane.rowIndex="1" GridPane.columnIndex="3" spacing="10" alignment="CENTER">
        <ImageView fx:id="second" fitHeight="400" fitWidth="300"/>
        <HBox spacing="10" alignment="CENTER">
            <Button text="Select" styleClass="select" />
        </HBox>
    </VBox>

    <Button text="&#62;" styleClass="navigate" GridPane.rowIndex="1" GridPane.columnIndex="2" fx:id="next" alignment="CENTER"/>
    <Label GridPane.rowIndex="2" GridPane.columnIndex="4" prefWidth="150"/>

    <stylesheets>
        <URL value="@stylesheets/ImportView.css"/>
    </stylesheets>
</GridPane>
