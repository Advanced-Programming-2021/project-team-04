<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import java.net.URL?>
<?import javafx.scene.image.ImageView?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="view.DeckView"
          prefHeight="763" prefWidth="1246" alignment="CENTER" hgap="10" vgap="10" styleClass="root">

    <HBox GridPane.rowIndex="0" GridPane.columnSpan="4"/>

    <Button text="&#60;" styleClass="navi" GridPane.rowIndex="1" GridPane.columnIndex="0" fx:id="back" onMouseClicked="#back"/>

    <VBox GridPane.rowIndex="1" GridPane.columnIndex="1" spacing="10" alignment="CENTER">
        <ImageView fx:id="first" fitHeight="400" fitWidth="300"/>
        <HBox spacing="10" alignment="CENTER">
            <Label text="From Main Deck" styleClass="address"/>
            <Button text="Delete" styleClass="Delete"/>
        </HBox>
    </VBox>

    <VBox GridPane.rowIndex="1" GridPane.columnIndex="2" spacing="10" alignment="CENTER">
        <ImageView fx:id="second" fitHeight="400" fitWidth="300"/>
        <HBox spacing="10" alignment="CENTER">
            <Label text="From Side Deck" styleClass="address"/>
            <Button text="Delete" styleClass="Delete"/>
        </HBox>
    </VBox>

    <Button text="&#62;" styleClass="navi" GridPane.rowIndex="1" GridPane.columnIndex="3" fx:id="next" onMouseClicked="#next"/>
    <Button text="Add Card" styleClass="add" GridPane.rowIndex="2" GridPane.columnIndex="3" fx:id="add"/>
    <Button text="Main Menu" fx:id="mainMenu" GridPane.columnIndex="4" GridPane.rowIndex="2" onMouseClicked="#mainMenu"/>

    <stylesheets>
        <URL value="@stylesheets/Deck.css"/>
    </stylesheets>
</GridPane>
