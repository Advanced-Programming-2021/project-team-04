<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import java.net.URL?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="view.LoginView"
          prefHeight="855.4" prefWidth="1120" alignment="CENTER" hgap="10" vgap="10" styleClass="root">

    <padding>
        <Insets top="25" right="25" bottom="25" left="25"/>
    </padding>

    <ToggleButton fx:id="mute" prefWidth="100" prefHeight="100" onMouseClicked="#muteSignup"/>

    <Label text="YU GI OH!&#10;For when you're immortal&#10;A good war is a very pleasant distraction, indeed"
           textAlignment="CENTER" GridPane.rowIndex="0" GridPane.columnSpan="2" fx:id="greetings"/>

    <Label text="Username:"
           GridPane.columnIndex="0" GridPane.rowIndex="2"/>

    <TextField fx:id="username"
               GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Label text="Nickname:"
           GridPane.columnIndex="0" GridPane.rowIndex="3"/>

    <TextField fx:id="nickname"
               GridPane.columnIndex="1" GridPane.rowIndex="3"/>

    <Label text="Password:"
           GridPane.columnIndex="0" GridPane.rowIndex="4"/>

    <PasswordField fx:id="password"
                   GridPane.columnIndex="1" GridPane.rowIndex="4"/>


    <HBox spacing="10" alignment="CENTER"
          GridPane.rowIndex="5" GridPane.columnSpan="2">
        <Button text="LogIn" fx:id="login" onMouseClicked="#loginScene"/>
        <Button text="Signup" fx:id="signup" onMouseClicked="#createUser"/>
    </HBox>

    <stylesheets>
        <URL value="@stylesheets/LoginView.css"/>
    </stylesheets>
</GridPane>
