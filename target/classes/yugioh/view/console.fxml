<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import java.net.URL?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="yugioh.view.DuelView"
          prefHeight="834.4" prefWidth="613.2" alignment="CENTER" hgap="10" vgap="10" styleClass="root">
    <VBox fx:id="clowns" GridPane.columnIndex="0" GridPane.rowIndex="0" alignment="CENTER_LEFT">
        <Label fx:id="confusion" styleClass="confusion" text="How would a melody describe itself when asked?"/>
        <TextField  text="tell me your secret..." styleClass="text-field"/>
        <Button fx:id="distortion" text="distortion" styleClass="distortion"/>
        <Button text="Main Menu" GridPane.columnIndex="1" onMouseClicked="#backToGame" styleClass="main"/>
    </VBox>
    <stylesheets>
        <URL value="@stylesheets/console.css"/>
    </stylesheets>
</GridPane>
